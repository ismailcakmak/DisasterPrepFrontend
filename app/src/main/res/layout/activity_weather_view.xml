<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityWeatherView">

    <ImageView
        android:id="@+id/imgview_act4"
        android:layout_width="81dp"
        android:layout_height="142dp"
        android:contentDescription="@null"
        android:src="@drawable/earthquake"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="159dp">

        <TextView
            android:id="@+id/name_act4"
            android:layout_width="94dp"
            android:layout_height="34dp"
            android:text="Disaster"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/desc_act4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disaster Description" />


        <CheckBox
            android:id="@+id/weather_checkBox1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CheckBox" />

        <CheckBox
            android:id="@+id/weather_checkBox2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CheckBox" />

        <CheckBox
            android:id="@+id/weather_checkBox3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CheckBox" />

        <CheckBox
            android:id="@+id/weather_checkBox4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CheckBox" />

        <CheckBox
            android:id="@+id/weather_checkBox5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CheckBox" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>